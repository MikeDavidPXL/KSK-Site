{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./netlify/functions-dist",
    "rootDir": "./netlify/functions",
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": ["netlify/functions/**/*.ts"]
}
